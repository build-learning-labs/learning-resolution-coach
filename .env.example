# Database
DATABASE_URL=sqlite:///./dev.db
# DATABASE_URL=postgresql://user:password@localhost:5432/learning_coach

# LLM Provider (pick one)
LLM_PROVIDER=openai
OPENAI_API_KEY=sk-your-openai-api-key
OPENAI_MODEL=gpt-4o
# ANTHROPIC_API_KEY=sk-ant-your-anthropic-key
# AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
# AZURE_OPENAI_KEY=your-azure-key
# AZURE_OPENAI_DEPLOYMENT=gpt-4o
# OLLAMA_BASE_URL=http://localhost:11434
# OLLAMA_MODEL=llama3.2

# Vector Database (pick one)
VECTOR_STORE=chromadb
CHROMA_PERSIST_DIR=./chromadb_data
# PINECONE_API_KEY=your-pinecone-key
# PINECONE_ENVIRONMENT=us-east-1
# PINECONE_INDEX=learning-coach
# QDRANT_URL=http://localhost:6333
# QDRANT_API_KEY=your-qdrant-key

# Opik (Observability)
OPIK_API_KEY=your-opik-api-key
OPIK_PROJECT=learning-resolution-coach

# Services
GATEWAY_PORT=8000
CORE_AGENT_PORT=8001
RAG_WORKER_PORT=8002
EVALUATOR_PORT=8003
NOTIFICATION_PORT=8004

# Email (SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
EMAIL_FROM=noreply@learningcoach.app

# Google OAuth
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_REDIRECT_URI=http://localhost:8000/auth/google/callback

# JWT
JWT_SECRET_KEY=your-super-secret-jwt-key-change-this-in-production
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=30
JWT_REFRESH_TOKEN_EXPIRE_DAYS=7

# Environment
ENVIRONMENT=development
DEBUG=true
CORS_ORIGINS=http://localhost:4200,http://localhost:8000
